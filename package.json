{
  "name": "@messageflow/build",
  "version": "0.0.0",
  "private": true,
  "description": "Quick build with Gulp",
  "keywords": [
    "@messageflow/build",
    "node",
    "typescript"
  ],
  "homepage": "https://github.com/Messageflow/build",
  "license": "MIT",
  "author": {
    "name": "Rong Sen Ng",
    "email": "wes.ngrongsen@gmail.com",
    "url": "https://github.com/motss"
  },
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Messageflow/build.git"
  },
  "scripts": {
    "build": "npm run ts && cross-env NODE_ENV=production gulp && npm run cleanup",
    "check": "npm run lint && npm run nsp",
    "cleanup": "rm -rf gulpfile.js",
    "demo": "gulp --gulpfile src/demo/build.js",
    "gulp": "npm run ts && gulp && npm run cleanup",
    "lint": "npm run ts && cross-env NODE_ENV=production gulp lint && npm run cleanup",
    "nsp": "nsp check",
    "prepublishOnly": "npm run check && npm run build",
    "test": "jest --config ./.jestrc.json",
    "ts": "tsc --target esnext --lib esnext,esnext.array,esnext.asynciterable --esModuleInterop --allowSyntheticDefaultImports --module commonjs gulpfile.ts"
  },
  "dependencies": {
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-babel-minify": "^0.3.0",
    "gulp-filter": "^5.1.0",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^4.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/del": "^3.0.1",
    "@types/gulp": "^4.0.5",
    "@types/jest": "^22.2.2",
    "@types/node": "^9.4.0",
    "cross-env": "^5.1.3",
    "jest": "^22.4.3",
    "nsp": "^3.2.1",
    "ts-jest": "^22.4.2",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-consistent-codestyle": "^1.12.0",
    "tslint-immutable": "^4.5.1"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.5.1"
  }
}
